window.onload=function(){var oMenu=document.getElementById("menu");var aLi=oMenu.getElementsByClassName("menu_title");var aOl=oMenu.getElementsByTagName("ol");for(var i=0;i<aLi.length;i++){aLi[i].index=i;aLi[i].onmouseover=function(){aOl[this.index].className="menu_active"};aLi[i].onmouseleave=function(){aOl[this.index].className=""}}var oDivPic=document.getElementById("picture");var oImg=oDivPic.getElementsByTagName("img")[0];var aBtn=oDivPic.getElementsByTagName("input");var aChoose=oDivPic.getElementsByTagName("li");var i,j;var aUrl=["../img/index/pic1.png","../img/index/pic2.png","../img/index/pic3.png","../img/index/pic4.png"];var num=0;for(i=0;i<aBtn.length;i++){aBtn[i].index=i;aBtn[i].onmouseover=function(){aBtn[this.index].style.opacity="1.0"};aBtn[i].onmouseleave=function(){aBtn[this.index].style.opacity="0.7"}}aBtn[0].onclick=function(){num++;if(num>aUrl.length-1){aChoose[aUrl.length-1].style.background="#6A6A6A";num=0}oImg.src=aUrl[num];aChoose[num].style.background="black";aChoose[num-1].style.background="#6A6A6A"};aBtn[1].onclick=function(){num--;if(num<0){aChoose[0].style.background="#6A6A6A";num=aUrl.length-1}oImg.src=aUrl[num];aChoose[num].style.background="black";aChoose[num+1].style.background="#6A6A6A"};for(i=0;i<aUrl.length;i++){aChoose[i].index=i;aChoose[i].onclick=function(){for(j=0;j<aUrl.length;j++){aChoose[j].style.background="#6A6A6A"}num=this.index;aChoose[num].style.background="black";oImg.src=aUrl[num]}}};